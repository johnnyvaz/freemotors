---
import Layout from '../layouts/Page.astro'
import Container from '../components/Container.astro';
import BlogPostsList from '../components/BlogPostsList.astro';

const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.publishedAt).valueOf() - new Date(a.frontmatter.publishedAt).valueOf()
);

const seo = {
  title: 'FreeMotors Ferramentas Automotivas',
  description: 'FreeMotors Ferramentas Automotivas',
}
---

<style>
  .home-hero-text__container {
    padding: 5vh 0;
  }
  h1,p,h2 {
    text-align: center;
  }
</style>

<Layout seo={seo}>
  <Container>
    <div class="home-hero-text__container">
      <h1 class="fade-in">FreeMotors</h1>
      <h2 class="fade-in">Soluções Automotivas</h2>
      <p>Contato: 16 98254-2122</p>
    </div>
   
    <BlogPostsList posts={posts}/>
  </Container>
</Layout>

